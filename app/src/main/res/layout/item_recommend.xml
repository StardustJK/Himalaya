<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp"
    android:background="#ffffff">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/album_cover"
        android:background="#00ffff"
        android:layout_marginLeft="5dp"
        android:layout_width="68dp"
        android:layout_height="65dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album_cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/album_title_tv"
            android:textSize="18sp"
            android:text="拿破仑xxxxxxx拿破仑xxxxxxx拿破仑啊啊啊拿破仑啊啊啊xxx拿破仑xxxxxxx"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/album_description_tv"
            android:textSize="12sp"
            android:text="拿破仑xxxxxxx"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/play_info_icon"/>
                <TextView
                    android:id="@+id/album_play_count"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="234.5万"
                    android:layout_marginLeft="2dp"
                    android:textSize="7sp"
                    android:textColor="#ff848484"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/ic_sound"/>
                <TextView
                    android:id="@+id/album_content_size"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="23集"
                    android:textSize="7sp"
                    android:textColor="#ff848484"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>